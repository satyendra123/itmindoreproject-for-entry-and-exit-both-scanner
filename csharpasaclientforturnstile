using System;
using System.IO;
using System.Net.Sockets;
using System.Text;
using System.Threading;
using MySql.Data.MySqlClient;

class TcpQrClient
{
    static TcpClient client;
    static NetworkStream stream;

    static string serverIp;
    static int serverPort;
    static string connString;

    static int retryMillisec;
    static string gateId;
    static bool debugLog;

    static string configPath = "config.txt";
    static string logPath = "connectivitylog.txt";

    static byte[] buffer = new byte[1024];
    static StringBuilder packetBuffer = new StringBuilder();

    static void Main()
    {
        LoadConfig();
        TestDatabaseConnection();

        while (true)
        {
            try
            {
                ConnectToArduino();
                ListenForPackets();
            }
            catch (Exception ex)
            {
                Log("Error: " + ex.Message);
            }
            finally
            {
                try { stream?.Close(); } catch { }
                try { client?.Close(); } catch { }

                Log($"Disconnected. Reconnecting in {retryMillisec} ms...");
                Thread.Sleep(retryMillisec);
            }
        }
    }

    static void TestDatabaseConnection()
    {
        try
        {
            using (MySqlConnection conn = new MySqlConnection(connString))
            {
                conn.Open();
                Log("Database Connected Successfully");
            }
        }
        catch (Exception ex)
        {
            Log("Database Connection FAILED: " + ex.Message);
        }
    }
    static void ConnectToArduino()
    {
        Log($"Connecting to {serverIp}:{serverPort}");

        client = new TcpClient();
        client.Connect(serverIp, serverPort);

        stream = client.GetStream();

        Log("Connected to Arduino");

        // ðŸ”¥ Trigger Arduino read loop (like Hercules)
        byte[] trigger = Encoding.ASCII.GetBytes("|PING%");
        stream.Write(trigger, 0, trigger.Length);
        Log("Sent initial trigger |PING%");
    }


    // âœ… Proper TCP blocking read (like Hercules)
    static void ListenForPackets()
    {
        while (true)
        {
            int bytesRead = stream.Read(buffer, 0, buffer.Length);

            if (bytesRead <= 0)
                throw new Exception("Arduino disconnected");

            string data = Encoding.ASCII.GetString(buffer, 0, bytesRead);
            packetBuffer.Append(data);

            ProcessBuffer();
        }
    }

    // âœ… Industrial packet parser
    static void ProcessBuffer()
    {
        while (true)
        {
            string buf = packetBuffer.ToString();

            int start = buf.IndexOf('|');
            if (start == -1)
            {
                packetBuffer.Clear();
                return;
            }

            int end = buf.IndexOf('%', start);
            if (end == -1)
                return;

            string packet = buf.Substring(start, end - start + 1);
            packetBuffer.Remove(0, end + 1);

            ProcessPacket(packet);
        }
    }

    static void ProcessPacket(string packet)
    {
        packet = packet.Trim();

        Log("Received Packet: " + packet);
        Console.WriteLine(packet);

        try
        {
            if (packet.StartsWith("|ENQR-"))
            {
                string qr = packet.Replace("|ENQR-", "").Replace("%", "").Trim();
                HandleQr(qr, "IN");
            }
            else if (packet.StartsWith("|EXQR-"))
            {
                string qr = packet.Replace("|EXQR-", "").Replace("%", "").Trim();
                HandleQr(qr, "OUT");
            }
        }
        catch (Exception ex)
        {
            Log("Packet Error: " + ex.Message);
        }
    }

    static void HandleQr(string qrData, string type)
    {
        Log($"QR Data: {qrData} Type: {type}");

        using (MySqlConnection conn = new MySqlConnection(connString))
        {
            conn.Open();

            string checkQuery = "SELECT vrollno FROM student WHERE reg=@qr LIMIT 1";
            using (MySqlCommand cmd = new MySqlCommand(checkQuery, conn))
            {
                cmd.Parameters.AddWithValue("@qr", qrData);
                var result = cmd.ExecuteScalar();

                if (result != null)
                {
                    string vrollno = result.ToString();

                    Log($"Student Found: {vrollno}");

                    string insertLog = @"INSERT INTO lib_logs 
                        (vrollno, vtype, ddatetime, vdeviceid, dcreateon) 
                        VALUES (@roll, @type, NOW(), @dev, NOW())";

                    using (MySqlCommand logCmd = new MySqlCommand(insertLog, conn))
                    {
                        logCmd.Parameters.AddWithValue("@roll", vrollno);
                        logCmd.Parameters.AddWithValue("@type", type);
                        logCmd.Parameters.AddWithValue("@dev", gateId);
                        logCmd.ExecuteNonQuery();
                    }

                    SendOpenCommand();
                }
                else
                {
                    Log("QR Not Found in DB");
                }
            }
        }
    }

    static void SendOpenCommand()
    {
        try
        {
            byte[] data = Encoding.ASCII.GetBytes("|OPEN%");
            stream.Write(data, 0, data.Length);
            Log("Sent: |OPEN%");
        }
        catch (Exception ex)
        {
            Log("Send Error: " + ex.Message);
        }
    }

    static void LoadConfig()
    {
        var lines = File.ReadAllLines(configPath);

        foreach (var line in lines)
        {
            if (string.IsNullOrWhiteSpace(line) || !line.Contains("="))
                continue;

            var parts = line.Split('=', 2);
            string key = parts[0].Trim();
            string value = parts[1].Trim();

            switch (key)
            {
                case "DbPath": connString = value; break;
                case "Server_IP": serverIp = value; break;
                case "Port": serverPort = int.Parse(value); break;
                case "Retry_milisec": retryMillisec = int.Parse(value); break;
                case "Gate": gateId = value; break;
                case "DebugLog": debugLog = value.Equals("True", StringComparison.OrdinalIgnoreCase); break;
            }
        }

        Log("Configuration Loaded Successfully");
    }

    static void Log(string msg)
    {
        if (!debugLog) return;

        File.AppendAllText(logPath,
            $"[{DateTime.Now:yyyy-MM-dd HH:mm:ss}] {msg}\n");
    }
}
